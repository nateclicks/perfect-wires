{
  "name": "perfect-wires",
  "version": "0.3.1",
  "description": "Create perfect wires between items",
  "repository": "github:nateclicks/perfect-wires",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "change": "beachball change",
    "check": "beachball check",
    "beachball:publish": "beachball publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Nate<nate@nateclicks.com>",
  "keywords": [
    "wire",
    "shape",
    "connect",
    "diagram",
    "2d",
    "box"
  ],
  "module": "dist/perfect-wires.esm.js",
  "size-limit": [
    {
      "path": "dist/perfect-wires.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/perfect-wires.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "beachball": "^2.32.2",
    "husky": "^8.0.1",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  }
}
